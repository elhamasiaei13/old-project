	/**
	 * @return the roles
	 */
	public List<String> getRoles() {
		List<String> result = new ArrayList<String>();
		if(Validator.isNotNull(this.roles)){
			for (String s : Splitter.on(',').split(this.roles)) {
				result.add(s.trim());
			}
		}
		return result;
	}

