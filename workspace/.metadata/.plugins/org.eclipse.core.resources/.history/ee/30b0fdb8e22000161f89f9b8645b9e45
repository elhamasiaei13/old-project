		  <script>
			function memberSelected(){

				   	var choose =  "انتخاب کنید";
					var e = document.getElementById("memberId").value;
					if(e != choose){						
						$('#memberId').val(e);
					}
					else{
						$('#memberId').val(null);
					}	 
						
			}
