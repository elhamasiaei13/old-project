		<script th:inline="javascript">

			var destinations = [
       			{
		            id: 'THR',
		            text: 'تهران'
		        },
		        {
		            id: 'CENTERS',
		            text: 'مراکز استان'
		        },
		        {
		            id: 'SATELLITE',
		            text: 'شهر‌های اقماری'
		        }
    		];
	
	    var currentPersonId = null;
	
	    function resetVisitorsFragment($legalPersonFragment) {
	        $legalPersonFragment.find('input,select, textarea').val('');
	        $legalPersonFragment.find('input:radio, input:checkbox').iCheck('uncheck');
	        try {
	            $('#originDestination').select2('val', '');
	        } catch (Erro) {}
	        try {
	            $('#sendDestinations').select2('val', '');
	        } catch (Erro) {}
	        try {
	            $('#gender').select2('val', '');
	        } catch (Erro) {}
	        try {
	            $('#COD').select2('val', '');
	        } catch (Erro) {}
	    }

		
	    function ajaxResult(data, page) {
	        var more = (page * 20) < data.recordsFiltered;
	        $.each(data.data, function(i, obj) {
	            if ( /* currentPersonId == obj.id ||  */ !obj.active) {
	                obj.disabled = true;
	                return;
	            }
	        });
	        return {
	            results: data.data,
	            more: more
	        };
	    }
	
			
  		</script>
